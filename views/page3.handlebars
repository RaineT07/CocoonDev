    <script>

        const elements = {
            cls1: document.querySelectorAll('.cls-1, .cls-2'), // mouth stroke and spring
            cls3: document.querySelectorAll('.cls-3'), // spikes
            cls4: document.querySelectorAll('.cls-4'), // eye + nose
            cls5: document.querySelectorAll('.cls-5'), // body + base
            cls6: document.querySelectorAll('.cls-6'), // eye white
            cls7: document.querySelectorAll('.cls-7') // belly
        };



        const changeColors = (cls, fill, stroke) => {
            cls.forEach(element => {
                element.style.fill = fill;
                element.style.stroke = stroke;
            });
        }


        document.getElementById('pallet1').addEventListener('click', () => {
            changeColors(elements.cls1, ' ', '#ffc6ff');
            changeColors(elements.cls3, '#f474f0', '');
            changeColors(elements.cls4, '#290a42', '');
            changeColors(elements.cls5, '#bc8dd4', '');
            changeColors(elements.cls6, '#fff', '');
            changeColors(elements.cls7, '#ffc6ff', '');
        });

        document.getElementById('pallet2').addEventListener('click', () => {
            changeColors(elements.cls1, ' ', '#4D4B4E');
            changeColors(elements.cls3, '#A3BE8C', '');
            changeColors(elements.cls4, '#4D4B4E', '');
            changeColors(elements.cls5, '#9D8B6D', '');
            changeColors(elements.cls6, '#fff', '');
            changeColors(elements.cls7, '#D8C3A5', '');
        });

        document.getElementById('pallet3').addEventListener('click', () => {
            changeColors(elements.cls1, ' ', '#5E81AC');
            changeColors(elements.cls3, '#B8E0D2', '');
            changeColors(elements.cls4, '#88C0D0', '');
            changeColors(elements.cls5, '#81A1C1', '');
            changeColors(elements.cls6, '#fff', '');
            changeColors(elements.cls7, '#BEE3DB', '');
        });

        document.querySelectorAll('.smooth-transition').forEach(element => {
            element.classList.add('smooth-transition');
        });

        const changeColorsSlider = (hue, saturation, lightness) => {
            const hslColor = `hsl(${hue}, ${saturation}%, ${lightness}%)`;
            elements.cls5.forEach(element => {
                element.style.fill = hslColor;
            });
        }


        document.getElementById('hue-slider').addEventListener('input', () => {
            const hue = document.getElementById('hue-slider').value;
            changeColorsSlider(hue, 100, 50);
        });

        document.getElementById('saturation-slider').addEventListener('input', () => {
            const hue = document.getElementById('hue-slider').value;
            const saturation = document.getElementById('saturation-slider').value;
            changeColorsSlider(hue, saturation, 50);
        });

        document.getElementById('lightness-slider').addEventListener('input', () => {
            const hue = document.getElementById('hue-slider').value;
            const saturation = document.getElementById('saturation-slider').value;
            const lightness = document.getElementById('lightness-slider').value;
            changeColorsSlider(hue, saturation, lightness);
        });

    
